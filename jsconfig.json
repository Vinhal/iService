{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "baseUrl": "src",
    "module": "commonjs",
    "paths": {
      "components/*": [
        "./components/*"
      ],
      "container/*": [
        "./container/*"
      ],
      "assets/*": [
        "./assets/*"
      ],
      "resources/*": [
        "./resources/*"
      ],
      "commons/*": [
        "./commons/*"
      ],
      "context/*": [
        "./context/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "build"
  ]
}
